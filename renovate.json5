{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:recommended",
      // Automerge all updates when they pass checks.
	  ":automergeAll",
	  ":automergePr",
  ],
  "allowedCommands": ["^bazel mod tidy$"],
  "postUpgradeTasks": {
    "commands": ["bazel mod tidy"],
     "fileFilters": ["MODULE.bazel.lock"],
    "executionMode": "branch",
  },
}
